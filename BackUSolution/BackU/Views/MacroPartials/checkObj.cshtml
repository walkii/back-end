@inherits Umbraco.Web.Macros.PartialViewMacroPage
@using Umbraco.Web

@{ var selection = Model.Content.Children.Where(x => x.IsVisible()).ToArray(); 
var check=0;
var number=0;
if (selection.Length > 0){

        foreach (var item in selection){
        if (item.GetPropertyValue<bool>("checkTaskItem"))
        {
            check++;
        }
            number++;
        }
    }
}

        @if ( @number ==  @check){
           <h2 class="check" id="titleObjectiveItem">@Umbraco.Field("titleObjectiveItem")</h2>
            
        }
        else{
            <h2 class="uncheck" id="titleObjectiveItem">@Umbraco.Field("titleObjectiveItem")</h2>
        }
